<Window x:Class="UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid x:Name="mainGrid" Rows="4">
        <Button x:Name="passButton" Click="PassButtonClick" Content="Pass test"></Button>
        <Button x:Name="newButton" Click="NewButtonClick" Content="Create new test"></Button>
        <Button x:Name="redactButton" Click="RedactButtonClick" Content="Redact test"></Button>
        <Button x:Name="exitButton" Click="ExitButtonClick" Content="Exit"></Button>
        
    </UniformGrid>
</Window>
