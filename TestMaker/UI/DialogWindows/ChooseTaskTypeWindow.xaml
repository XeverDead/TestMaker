<Window x:Class="UI.DialogWindows.ChooseTaskTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.DialogWindows"
        mc:Ignorable="d"
        Title="ChooseTaskTypeWindow" Height="200" Width="400">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="TypesBox"></ComboBox>
        <UniformGrid x:Name="ButtonsGrid" Columns="2" Grid.Row="2">
            <Button x:Name="OkButton" Content="Ok"></Button>
            <Button x:Name="CancelButton" Content="Cancel"></Button>
        </UniformGrid>
    </Grid>
</Window>
